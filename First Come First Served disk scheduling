#include <stdio.h>
#include <stdlib.h>

int main() {
    int n, i, head, seek = 0;

    printf("Enter number of disk requests: ");
    scanf("%d", &n);

    int request[n];
    printf("Enter the request sequence:\n");
    for (i = 0; i < n; i++) {
        scanf("%d", &request[i]);
    }

    printf("Enter initial head position: ");
    scanf("%d", &head);

    printf("\nSequence of head movement:\n");
    printf("%d", head);

    for (i = 0; i < n; i++) {
        seek += abs(head - request[i]);   // distance moved
        head = request[i];
        printf(" -> %d", head);
    }

    printf("\n\nTotal Seek Time: %d\n", seek);
    printf("Average Seek Time: %.2f\n", (float)seek / n);

    return 0;
}
