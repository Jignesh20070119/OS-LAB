#include <stdio.h>
int main() {
    int n, tq, i, count = 0, sq = 0;
    int bt[10], wt[10], tat[10], rem[10];
    float avgwt = 0, avgtat = 0;
    printf("Enter number of processes: ");
    scanf("%d", &n);
    printf("Enter burst time of each process:\n");
    for (i = 0; i < n; i++) {
        printf("P%d: ", i+1);
        scanf("%d", &bt[i]);
        rem[i] = bt[i]; 
    }
    printf("Enter time quantum: ");
    scanf("%d", &tq);
    while (count < n) {
        for (i = 0; i < n; i++) {
            if (rem[i] > 0) {
                if (rem[i] > tq) {
                    sq += tq;
                    rem[i] -= tq;
                } else {
                    sq += rem[i];
                    tat[i] = sq;        
                    wt[i] = tat[i] - bt[i];
                    rem[i] = 0;
                    count++;
                }
            }
        }
    }

    printf("\nProcess\tBT\tWT\tTAT\n");
    for (i = 0; i < n; i++) {
        printf("P%d\t%d\t%d\t%d\n", i+1, bt[i], wt[i], tat[i]);
        avgwt += wt[i];
        avgtat += tat[i];
    }

    printf("\nAverage Waiting Time = %.2f", avgwt/n);
    printf("\nAverage Turnaround Time = %.2f\n", avgtat/n);

    return 0;
}
