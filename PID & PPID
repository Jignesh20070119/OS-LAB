#include <stdio.h>
#include <unistd.h>
int main() {
    pid_t pid = fork(); 
    if (pid > 0) { 
        printf("I am the Parent process\n");
        printf("My PID: %d\n", getpid());
        printf("My Parent PID: %d\n", getppid());
        printf("Child's PID (from parent): %d\n", pid);
    } else if (pid == 0) { 
        printf("I am the Child process\n");
        printf("My PID: %d\n", getpid());
        printf("My Parent PID: %d\n", getppid());
    } else { 
        printf("Failed to create child process\n");
    }
    return 0;
}
