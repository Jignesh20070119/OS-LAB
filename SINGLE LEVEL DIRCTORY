#include <stdio.h>
#include <string.h>

struct {
    char fname[20];
    int inUse;
} dir[10];   // directory can hold up to 10 files

int main() {
    int ch, i;
    char f[20];

    // Initialize directory
    for (i = 0; i < 10; i++)
        dir[i].inUse = 0;

    printf("Single Level Directory Implementation\n");

    while (1) {
        printf("\nMenu:\n");
        printf("1. Create File\n2. Delete File\n3. Search File\n4. Display Files\n5. Exit\n");
        printf("Enter your choice: ");
        scanf("%d", &ch);

        switch (ch) {
            case 1: // Create
                printf("Enter file name: ");
                scanf("%s", f);
                for (i = 0; i < 10; i++) {
                    if (dir[i].inUse && strcmp(dir[i].fname, f) == 0) {
                        printf("File already exists!\n");
                        break;
                    }
                }
                if (i == 10) {
                    for (i = 0; i < 10; i++) {
                        if (!dir[i].inUse) {
                            strcpy(dir[i].fname, f);
                            dir[i].inUse = 1;
                            printf("File created successfully.\n");
                            break;
                        }
                    }
                    if (i == 10)
                        printf("Directory is full!\n");
                }
                break;

            case 2: // Delete
                printf("Enter file name to delete: ");
                scanf("%s", f);
                for (i = 0; i < 10; i++) {
                    if (dir[i].inUse && strcmp(dir[i].fname, f) == 0) {
                        dir[i].inUse = 0;
                        printf("File deleted successfully.\n");
                        break;
                    }
                }
                if (i == 10)
                    printf("File not found!\n");
                break;

            case 3: // Search
                printf("Enter file name to search: ");
                scanf("%s", f);
                for (i = 0; i < 10; i++) {
                    if (dir[i].inUse && strcmp(dir[i].fname, f) == 0) {
                        printf("File found: %s\n", f);
                        break;
                    }
                }
                if (i == 10)
                    printf("File not found!\n");
                break;

            case 4: // Display
                printf("Files in directory:\n");
                for (i = 0; i < 10; i++) {
                    if (dir[i].inUse)
                        printf("%s\n", dir[i].fname);
                }
                break;

            case 5:
                return 0;

            default:
                printf("Invalid choice!\n");
        }
    }
}
